<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activity.StandardCompassActivity">

    <RelativeLayout
        android:layout_above="@+id/fl_adplaceholder"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:id="@+id/compass"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/standardcompass"
        android:layout_centerInParent="true"
        android:contentDescription="@string/standard_compass" />

    <TextView
        android:id="@+id/degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_below="@id/compass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    </RelativeLayout>


    <FrameLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/fl_adplaceholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" />

</RelativeLayout>